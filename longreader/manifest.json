{
  "name": "Longreader",
  "version" : "1.35",
  "manifest_version": 2,
  "description": "Fit more content on your screen. Display an article in columns across the whole monitor. Customize size, colors and text.",
  "icons": {
    "16": "images/icons/book_16.png",
    "48": "images/icons/book_green_48.png",
    "128": "images/icons/book_green_128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
},
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "https://readability.com/*"
  ],

  "web_accessible_resources": [
    "images/*",
    "views/*"
  ],
  "content_security_policy": "script-src 'self' https://readability.com/; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "128": "images/icons/book_green_512.png"
    },
    "default_title": "Longreader"
  }
}
